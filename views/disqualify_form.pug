extends layout

block content
.main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Sign Up
  //- h1= title
  //- p Welcome to #{title}

  form(method='POST' action='/disqualify_form')
      div.form-group
      input(type='hidden' name='mappingId' value=mappingId)
      //- label(for='fd_intent') Intent:
      //- input#intent.form-control(type='text', placeholder='description of the field' name='fd_intent' value=(undefined===intent ? '' : intent))
      div.form-group
      label(for='country') countryName:
            input#country.form-control(type='text', placeholder='country name' name='countryName')
      div.form-group
      label(for='code') productCode:
            input#code.form-control(type='text', placeholder='product code' name='productCode')
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!=error.msg